@model Prova.WebUI.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>

<h4>Novo cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom_cliente" class="control-label"></label>
                <input asp-for="Nom_cliente" class="form-control" />
                <span asp-validation-for="Nom_cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dt_cadastramento" class="control-label"></label>
                <input asp-for="Dt_cadastramento" class="form-control" />
                <span asp-validation-for="Dt_cadastramento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Des_observacao" class="control-label"></label>
                <input asp-for="Des_observacao" class="form-control" />
                <span asp-validation-for="Des_observacao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Fl_ativo" /> @Html.DisplayNameFor(model => model.Fl_ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
