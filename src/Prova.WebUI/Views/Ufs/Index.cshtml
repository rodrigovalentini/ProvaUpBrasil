@model IEnumerable<Prova.WebUI.ViewModels.UfViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Unidades Federativas</h1>

<p>
    <a asp-action="Create">Cadastrar novo estado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom_uf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sgl_uf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom_uf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sgl_uf)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
