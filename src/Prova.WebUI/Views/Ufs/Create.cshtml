@model Prova.WebUI.ViewModels.UfViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Unidades Federativas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom_uf" class="control-label"></label>
                <input asp-for="Nom_uf" class="form-control" />
                <span asp-validation-for="Nom_uf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sgl_uf" class="control-label"></label>
                <input asp-for="Sgl_uf" class="form-control" />
                <span asp-validation-for="Sgl_uf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista de estados</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
